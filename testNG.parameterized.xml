<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Parameters suite">
    <parameter name="URL" value="https://www.lambdatest.com/selenium-playground/"/>
        

    <parameter name="Task" value="Download File"/>
   <!-- download File is a string we are going to use it for the every single test -->



    <test name="pass parameters test">
       <parameter name="TestResult" value="Pass">
           <!-- pass or fail or skip we are going to use them one for each test -->

       </parameter>
       <classes>
           <class name="DemoTestNG.ParametrizedTest"/>
       </classes>


   </test>
    <test name="Fail parameters test">
        <parameter name="TestResult" value="Fail">

        </parameter>
        <classes>
            <class name="DemoTestNG.ParametrizedTest"/>
        </classes>

    </test>
    <test name="Skip parameters test">
        <parameter name="TestResult" value="Skip">

        </parameter>
        <classes>
            <class name="DemoTestNG.ParametrizedTest"/>
        </classes>

    </test>




</suite>